doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title John Smith Personal Portfolio
    link(rel='stylesheet', href='css/styles.css')

  body
    section.hero
      .jumbotron.jumbotron-fluid
        .container
          .row
            .col-xs-4
              img(src="images/hero.png")
            .content.col-xs-8
              h3 I am
              h1 John Smith
              h4 Professional graphic designer and web developer
              a.btn.btn-jumbotron(href="/#portfolio") View Portfolio
      nav.navbar
        .container
          button.navbar-toggler.hidden-lg-up(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
            .burg
          #navbarResponsive.collapse.navbar-toggleable-md
            a.navbar-brand(href='#')
              img(src="images/logo.png")
            ul.nav.navbar-nav.float-md-right
              li.nav-item.active
                a.nav-link(href='#')
                  | Home
                  span.sr-only (current)
              li.nav-item
                a.nav-link(href='#about-me') About Me
              li.nav-item
                a.nav-link(href='#portfolio') Portfolio
              li.nav-item
                a.nav-link(href='#') Blog
              li.nav-item
                a.nav-link(href="#") My Services
              li.nav-item
                a.nav-link(href="#") Contact
    section#about-me
      .container
        .row
          .col-sm-4.img-container
            .img
              img(src="images/about-me.jpg")
              .overlay
                a.expand(href="#") +
                a.close-overlay.hidden
          .col-sm-8
            .content
              h2 About Me

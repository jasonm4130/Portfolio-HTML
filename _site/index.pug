              .btn.btn-default Read More
    section#my-skills
      .container
        .row
          .header
            h2 My Skills
          .col-md-12.skills
            .skillbar(data-percent='95%')
              .skillbar-title Photoshop
              .skillbar-percent 95%
              .skillbar-container
                .skillbar-bar
                  span
            .skillbar(data-percent='89%')
              .skillbar-title Illustrator
              .skillbar-percent 89%
              .skillbar-container
                .skillbar-bar
                  span
            .skillbar(data-percent='65%')
              .skillbar-title Wordpress
              .skillbar-percent 65%
              .skillbar-container
                .skillbar-bar
                  span
            .skillbar(data-percent='97%')
              .skillbar-title HTML & CSS
              .skillbar-percent 97%
              .skillbar-container
                .skillbar-bar
                  span
    section#portfolio
      .container
        .row
          .header
            h2 My Portfolio
            nav.nav
              a.nav-link.active(href='#') All
              a.nav-link(href='#') Graphic Design
              a.nav-link(href='#') Advertising
              a.nav-link(href='#') Web design
              a.nav-link(href="#") Logo
              a.nav-link(href="#") Branding

    script(src='js/lib/jquery-3.1.1.min.js')
    script(src='js/lib/modernizr.js')
    script(src='js/lib/bootstrap.min.js')
    script(src='js/lib/mason.min.js')
    script(src='js/main.js')
